[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[packages]
flask = "*"
flask-cors = "*"
gunicorn = "*"
werkzeug = "*"

[dev-packages]
pytest = "*"
pytest-cov = "*"

[scripts]
dev = "bash -c \"export FLASK_ENV='development' && flask run\""
start = "gunicorn app:app"
test = "pytest ."
coverage = "pytest --coverage-report term-missing --cov=."

[requires]
python_version = "3.10"
